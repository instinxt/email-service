{
	"compilerOptions": {
		"target": "ESNext", // Use ESNext for modern JavaScript features
		"module": "NodeNext", // Use NodeNext for ES module support
		"strict": true, // Enable strict type checking
		"esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
		"skipLibCheck": true, // Skip type checking of declaration files
		"forceConsistentCasingInFileNames": true, // Ensure consistent casing in imports
		"outDir": "./dist", // Output directory for compiled files
		"rootDir": "./src" // Root directory of input files
	},
	"include": ["src/**/*"], // Include all TypeScript files in the src directory
	"exclude": ["node_modules"] // Exclude the node_modules directory
}
